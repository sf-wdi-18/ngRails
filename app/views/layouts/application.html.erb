<!DOCTYPE html>
<html>
<head>
  <title>JsonApi</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-static-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse_button">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Store It</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <% if current_store %>
        <div class="collapse navbar-collapse" id="collpase_button">
          <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_store.email %><span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="<%= account_path(current_store) %>">Account Profile</a></li>
                  <li class="divider"></li>
                  <li><a href="<%= logout_path %>">Logout</a></li>
                </ul>
              </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      <% end %>
    </div><!-- /.container-fluid -->
  </nav>

<div class='container'>

  <%= yield %>

</div>

</body>
</html>
